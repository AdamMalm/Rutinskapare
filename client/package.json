{
  "name": "client",
  "version": "1.0.0",
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "configure-husky": "cd .. && npx husky install && npx husky add .husky/pre-commit \"npx --no-install lint-staged\""
  },
  "dependencies": {
    "@apollo/client": "^3.7.2",
    "@react-navigation/native": "^6.1.0",
    "expo": "~47.0.8",
    "expo-status-bar": "~1.4.2",
    "graphql": "^15.8.0",
    "nativewind": "^2.0.11",
    "react": "18.1.0",
    "react-native": "0.70.5",
    "tailwindcss": "^3.2.4"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "eslint": "^8.29.0",
    "eslint-plugin-react": "^7.31.11",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.1"
  },
  "private": true,
  "lint-staged": {
    "**/*.{js,jsx}": ["eslint . --fix", "prettier --write ."]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
